<Window x:Class="AkemiSwitcher.AkemiSwitcherUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AkemiSwitcher"
        xmlns:p = "clr-namespace:AkemiSwitcher.Properties"
        mc:Ignorable="d"
        Title="AkemiSwitcher" Height="300" Width="435" Icon="Resources/logo.ico" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Resources>

    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="Resources/background.jpg" Stretch="UniformToFill" Opacity="0.365">
        </ImageBrush>
    </Window.Background>
    <Grid>
        <Image Height="130" VerticalAlignment="Top" Source="Resources/logo.png" Margin="0,10,0,0"/>
        <Label x:Name="versionText" Content="AkemiSwitcher v0.0.0.1 - playing on katakuna." HorizontalAlignment="Left" Margin="0,245,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button x:Name="btnSwitch" Content="PogChamp" Margin="30,158,30,0" VerticalAlignment="Top" Height="47" FontSize="18" BorderThickness="0" FontStretch="ExtraCondensed" FontWeight="Thin" Style="{StaticResource RoundButton}" Click="Button_Click" IsEnabled="False"/>
        <ComboBox HorizontalAlignment="Left" Margin="299,10,0,0" VerticalAlignment="Top" Width="120">
        </ComboBox>
    </Grid>
</Window>
